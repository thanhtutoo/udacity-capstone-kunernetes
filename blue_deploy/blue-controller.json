{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "blue",
        "labels": {
            "app": "blue"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "blue"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "blue"
                }
            },
            "spec": {
                "terminationGracePeriodSeconds": 30,
                "containers": [
                    {
                        "name": "blue",
                        "image": "thanhtutooai/capstone:latest",
                        "imagePullPolicy": "Always",
                        "ports": [
                            {
                                "name": "http-server",
                                "containerPort": 80
                            }
                        ]
                    }
                ]
            }
        }
    }
}